<%= form_with(model: [@recipe, recipe_step]) do |form| %>
  <% if recipe_step.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(recipe_step.errors.count, "error") %> prohibited this recipe_step from being saved:</h2>

      <ul>
        <% recipe_step.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="modal-body">
    <div>
      <%= form.label :step_number, style: "display: block" %>
      <%= form.number_field :step_number %>
    </div>

    <div>
      <%= form.label :step_text, style: "display: block" %>
      <%= form.text_area :step_text, class:"textAreaChanger" %>
    </div>
    <div>
      <%= form.number_field :user_id, id: :recipe_step_user_id, value: current_user.id, type: :hidden %>
    </div>
  </div>
  <div class="modal-footer">
    <%= form.submit class: "btn btn-secondary" %>
  </div>
<% end %>
