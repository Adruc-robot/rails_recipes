<%= form_with(model: recipe_step) do |form| %>
  <% if recipe_step.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(recipe_step.errors.count, "error") %> prohibited this recipe_step from being saved:</h2>

      <ul>
        <% recipe_step.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :recipe_id, style: "display: block" %>
    <% @recipes = Recipe.where(id: params[current_user.id]).or(Recipe.where(global: "T"))%>
    <%#= form.select :recipe_id, @recipes.map { |r| [r.name,r.id] }%>
    <%= form.number_field :recipe_id, :value=>"29" %>
  </div>

  <div>
    <%= form.label :step_number, style: "display: block" %>
    <%= form.number_field :step_number %>
  </div>

  <div>
    <%= form.label :step_text, style: "display: block" %>
    <%= form.text_field :step_text %>
  </div>
  <div>
    <%= form.number_field :user_id, id: :recipe_step_user_id, value: current_user.id, type: :hidden %>
  </div>

  <% if current_user.admin %>
    <div>
      <%= form.label :global %> <br />
      <%= form.select :global, [["True","T"],["False","F"]] %>
    </div>
  <% end %>



  <div>
    <%= form.submit %>
  </div>
<% end %>
