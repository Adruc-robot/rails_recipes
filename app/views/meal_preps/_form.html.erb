<%= form_with(model: meal_prep) do |form| %>
  <% if meal_prep.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(meal_prep.errors.count, "error") %> prohibited this meal_prep from being saved:</h2>

      <ul>
        <% meal_prep.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="modal-body">
    <div>
      <%= form.number_field :user_id, id: :recipe_user_id, value: current_user.id, type: :hidden %>
    </div>
    <div>
      <%= form.label :recipe_id, style: "display: block" %>
      <%= form.select :recipe_id, @recipes.map { |r| [r.name, r.id] }, selected: params[:recipe_id]%>
    </div>
    <div>
      <%= form.label :start_time, style: "display: block" %>
      <%= form.datetime_local_field :start_time, value: params[:start_time] %>
    </div>
  </div>
  <div class="modal-footer">
    <%= form.submit class: "btn btn-secondary" %>
  </div>
<% end %>
