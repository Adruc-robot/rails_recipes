<p style="color: green"><%= notice %></p>
<div class="bucket">
  <div class="build-recipe">
    <ul class="recipe-utility-list">
      <li><h2 id="recipeTitle"><%= @recipe.name %></h2></li>
      <li><div>
      <%= link_to edit_recipe_path(@recipe), data:{turbo_frame: "zFormModal", controller: "z-form-modal", action: "z-form-modal#showModal"} do %>
        <i class="bi bi-pencil"></i>
      <% end %>
      <%= link_to @recipe, data: {turbo_method: :delete, turbo_confirm: "For real?" } do %>
        <i class="bi bi-trash3"></i>
      <% end %>
      </div></li>      
    </ul>
  </div>
  <div class="recipe_ingredients">
    <ul class="recipe-ingredients-list" id="recipe-ingredients-container">
      <li>
        <%= link_to "add ingredient to recipe", new_recipe_recipe_ingredient_path(@recipe), data:{turbo_frame: "zFormModal", controller: "z-form-modal", action: "z-form-modal#showModal"}, class: "btn btn-secondary"%>
      </li>
      <% if @recipe_ingredients.each do |recipe_ingredient| %>
        <%= render recipe_ingredient %>
      <% end.empty? %>
        <li class="noItems">No ingredients</li>
      <% end %>
  </div>
  <div class="recipe_steps">
    <ul class="recipe-steps-list" id="recipe-steps-container">
      <li><%= link_to "add step to recipe", new_recipe_recipe_step_path(@recipe), data:{turbo_frame: "zFormModal", controller: "z-form-modal", action: "z-form-modal#showModal"},class: "btn btn-secondary" %></li>
      <% if @recipe_steps.each do |recipe_step| %>
        <%= render recipe_step %>
      <% end.empty? %>
        <li class="noItems">No steps</li>
      <% end %>
    </ul>
  </div>
</div>