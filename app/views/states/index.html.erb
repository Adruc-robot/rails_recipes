<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/dt/dt-1.11.4/datatables.min.css"/>
<script type="text/javascript" src="https://cdn.datatables.net/v/dt/dt-1.11.4/datatables.min.js"></script>
<%= javascript_include_tag "dt-setup" %>
<p style="color: green"><%= notice %></p>
<h1>States</h1>
<%= link_to "New state", new_state_path %>
<div id="states" class="content-scroller">
  <table class="dt-table">
    <thead>
      <tr>
        <th>Name</th>
        <% if current_user.admin %>
          <th>User Email (ID)</th>
          <th>Global</th>
        <% end %>
        <th></th>
        </tr>
    </thead>
    <tbody>
      <% @states.each do |state| %>
        <tr>
          <td><%= link_to state.name, state %></td>
          <% if current_user.admin == "T" %>
            <td>
              <%#= User.find_by(id: state.user_id).email + " (" + state.user_id.to_s + ")" %>
              <%= state.user.email + " (" + state.user_id.to_s + ")" %>
            </td>
            <td><%= state.global %></td>
          <% end %>
          <td><%= link_to "Delete", state, data: {turbo_method: :delete, turbo_confirm: "For real?" } %></td>
        </tr>
      <% end %>
          
    </tbody>
  </table>
</div>


