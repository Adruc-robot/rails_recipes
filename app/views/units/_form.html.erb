<%= form_with(model: unit) do |form| %>
  <% if unit.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(unit.errors.count, "error") %> prohibited this unit from being saved:</h2>

      <ul>
        <% unit.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.number_field :user_id, id: :unit_user_id, value: current_user.id, type: :hidden %>
  </div>
  <% if current_user.admin %>
    <div>
      <%= form.label :global %> <br />
      <%= form.select :global, [["True","T"],["False","F"]] %>
    </div>
  <% end %>
  
  <div>
    <%= form.submit %>
  </div>
<% end %>
