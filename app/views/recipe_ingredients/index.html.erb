<p style="color: green"><%= notice %></p>
<h1><%= @recipe.name %> ingredients</h1>

<div id="recipe_ingredients">
  <ul class="recipe-ingredients-list">
    <% @recipe_ingredients.each do |recipe_ingredient| %>
      <li><%= recipe_ingredient.amount + " " + recipe_ingredient.unit.name + " " + recipe_ingredient.ingredient.name %><% if recipe_ingredient.prep_instructions %><% "; " + recipe_ingredient.prep_instructions %><% end %>
        <div><%= link_to "(Edit", edit_recipe_recipe_ingredient_path(@recipe, recipe_ingredient),class:"btn btn-secondary"%>|<%= link_to "Delete)", [@recipe, recipe_ingredient], data: {turbo_method: :delete, turbo_confirm: "Delete ingredient from recipe?"},class:"btn btn-secondary" %></div>
      </li>
    <% end %>
  </ul>    
  <%= link_to "Back to recipe", recipe_path(@recipe) %>
</div>