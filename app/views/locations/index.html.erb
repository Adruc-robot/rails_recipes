<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/dt/dt-1.11.4/datatables.min.css"/>
<script type="text/javascript" src="https://cdn.datatables.net/v/dt/dt-1.11.4/datatables.min.js"></script>
<%= javascript_include_tag "dt-setup" %>
<p style="color: green"><%= notice %></p>
<h1>Locations</h1>
<%= link_to "New location", new_location_path %>
<div id="locations" class="content-scroller">
  <table class="dt-table">
    <thead>
      <tr>
        <th>Name</th>
        <% if current_user.admin %>
          <th>User Email (ID)</th>
          <th>Global</th>
        <% end %>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @locations.each do |location| %>
        <tr>
          <td><%= link_to location.name, location %></td>
          <% if current_user.admin %>
            <td><%= User.find_by(id: location.user_id).email + " (" + location.user_id.to_s + ")" %></td>
            <td><%= location.global %></td>
          <% end %>
            <td><%= button_to "Delete", location, method: :delete,class:"lBtn" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
